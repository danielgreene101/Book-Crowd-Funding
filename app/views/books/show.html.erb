<div class="row">
    <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book_show" %>
    </div>

    <div class="col-md-8">
        <h2><%= @book.title %></h2>
        <p>Genre: <%= @book.category.name %></p>
        <p><%= @book.description %></p>
        <h5><%= @book.name %></h5>
    </div>

</div>

    <div class="row">

        <div class="col-md-4">

        <!-- For the furutre donations-->

        </div>
    </div>

    <%= link_to "Back", root_path %>

    <% if user_signed_in? %>

        <% if @book.user_id == current_user.id %>

            <%= link_to "Edit", edit_book_path(@book)%>
            <%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}%>

        <%end%>

    <%end%>